# BOQ Backend Environment Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ============================================
# DATABASE CONFIGURATION
# ============================================
DATABASE_URL="mssql+pyodbc://YOUR_DB_USER:YOUR_STRONG_PASSWORD@localhost\\SQLEXPRESS/BOQ?driver=ODBC+Driver+17+for+SQL+Server"

# ============================================
# AUTHENTICATION & SECURITY
# ============================================
# Generate SECRET_KEY with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY="YOUR_SECRET_KEY_HERE_64_CHARACTERS"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES="30"
REFRESH_TOKEN_EXPIRE_DAYS="7"

# Admin account - Change immediately after first login!
# Minimum requirements: 8+ chars, uppercase, lowercase, number, special char
ADMIN_PASSWORD="YOUR_STRONG_ADMIN_PASSWORD"

# ============================================
# APPLICATION ENVIRONMENT
# ============================================
# Set to "production" when deploying to server
ENVIRONMENT="development"

# ============================================
# N8N WORKFLOW AUTOMATION (Optional)
# ============================================
USE_N8N_PROCESSING="false"
N8N_WEBHOOK_URL="http://localhost:5678/webhook/boq-document-upload"

# ============================================
# AI/OLLAMA CONFIGURATION
# ============================================
OLLAMA_HOST="http://localhost:11434"
# Model for production server (faster, smaller)
OLLAMA_MODEL_PRODUCTION="llama3.2:1b"
# Model for local development (more capable)
OLLAMA_MODEL_DEVELOPMENT="llama3.1:8b"

# ============================================
# AGENTOPS MONITORING (Optional)
# ============================================
# Get your API key from https://agentops.ai
AGENTOPS_API_KEY="YOUR_AGENTOPS_API_KEY"
AGENTOPS_ENV="development"

# ============================================
# SSL CONFIGURATION (Local Development Only)
# ============================================
# Disable SSL verification for local development
# Remove these in production!
CURL_CA_BUNDLE=""
REQUESTS_CA_BUNDLE=""
SSL_CERT_FILE=""
